  {
    "name": "NewHacks Extension",
    "version": "1.0",
    "description": "Timer for work periods and blocks unproductive websites while this is active",
     "permissions": ["management","declarativeContent", "storage", "tabs","activeTab"],

    "options_page": "options.html",
    "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
          "128": "pomegranate.png"
      }
    },

    "browser_action": {
      "default_icon": "res/pomegranate.png", 
      "default_popup": "src/popup.html"
    },
    
      "content_scripts": [
     {
     "matches": ["https://q.utoronto.ca/*"],
     "run_at": "document_idle",
     "all_frames": true,
     "js": ["src/content.js"]
     }
     ],
   
    
    "manifest_version": 2
  }

